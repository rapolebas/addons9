<odoo>

<template id="snippet_options" inherit_id="website.snippet_options">
    <xpath expr=".">
        <div data-js="anchor"
             data-selector="section, :not(.o_gallery > .container) > .carousel, .parallax, hr">
            <li data-only="click"
                data-ask="Choose anchor (leave empty to remove it)">
                <a>Change anchor</a>
            </li>
        </div>
    </xpath>
</template>

</odoo>
